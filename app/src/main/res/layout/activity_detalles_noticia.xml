<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesNoticiaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="9sp"
        android:paddingTop="15sp"
        android:paddingEnd="15sp"
        android:paddingBottom="15sp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="44dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/periodico" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="150dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/logo_app" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewYe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:layout_editor_absoluteX="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="9sp"
            android:paddingTop="15sp"
            android:paddingEnd="15sp"
            android:paddingBottom="15sp">




            <TextView
                android:id="@+id/txtTextoEncabezado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef_bold"
                android:justificationMode="inter_word"
                android:paddingStart="6dp"
                android:paddingTop="60sp"
                android:paddingEnd="6dp"
                android:text="TextView"
                android:textSize="34dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.08" />


            <TextView
                android:id="@+id/txtTextoEncabezado2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef"
                android:justificationMode="inter_word"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="BY SAM WARNERPUBLICADO: 11/06/2023"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.08"

                />

            <ImageView
                android:id="@+id/imageViewNoticia"
                android:layout_width="375dp"
                android:layout_height="209dp"
                android:layout_marginTop="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTextoEncabezado"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/casa" />

            <TextView
                android:id="@+id/txtTextoCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/alef"
                android:justificationMode="inter_word"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.117"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewNoticia"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>